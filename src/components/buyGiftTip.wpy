<style lang="less">
  .dialog__mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    background: rgba(0, 0, 0, 0.7);
    display: none;
  }

  .dialog__container {
    position: fixed;
    bottom: 260rpx;
    left: 85rpx;
    width: 750rpx;
    background: transparent;
    transform: translateY(100%);
    z-index: 11;
  }

  .dialog--show .dialog__mask {
    display: block;
  }

  .show-container {
    display: block;
  }

  .hidden-container {
    display: none;
  }

  .show-img {
    width: 750rpx;
    display: block;
    position: absolute;
    top: -780rpx;
    left: -85rpx;
  }

  .hidden-img {
    display: none;
  }

  .show-close {
    width: 28px;
    display: block;
  }

  .close-view {
    position: relative;
    top: -780rpx;
    left: 530rpx;
  }

  .dialog-content-view {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 580rpx;
    height: 680rpx;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 0 40rpx rgba(248, 99, 91, 0.5) inset;
  }

  .present-tip-text {
    font-size: 14px;
    color: #848383;
    margin-top: 340rpx;
  }

  .present-view {
    background: rgba(248,99,91,0.10);
    border: 1px solid #F8635B;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 500rpx;
    height: 96rpx;
    margin-top: 10px;
  }

  .present-text {
    font-size: 18px;
    font-weight: bold;
    color: #F8635B;
  }
  
  .title-tip-text {
    padding: 10px 12px 0px 12px;
    font-size: 16px;
    font-weight: bold;
    color: #453e3e;
    text-align: center;
  }

  .share-btn {
    background: #fff;
    position: static;
    border: none;
  }
</style>
<template>
  <view class="zan-dialog {{ showDialog ? 'dialog--show' : '' }}">
    <view class="dialog__mask" @tap.stop="toggleDialog" />
    <view animation="{{animationData}}" class="dialog__container {{showDialog ? 'show-container' : 'hidden-container'}}">
      <view class="dialog-content-view">
        <text class="title-tip-text">{{tip}}</text>
        <text class="present-tip-text">一次可以转发9个群哦！</text>
        <button open-type="share" class="share-btn">
          <view class="present-view">
            <text class="present-text">帮TA拉票</text>
          </view>
        </button>
      </view>
      <view style="position: relative">
        <image class="{{showDialog ? 'show-img' : 'hidden-img'}}" src="/asset/png/popup_help.png" mode="widthFix"/>
      </view>
      <view class="close-view" @tap.stop="toggleDialog">
        <image class="{{showDialog ? 'show-close' : 'hidden-img'}}" src="/asset/png/close.png" mode="widthFix"/>
      </view>
    </view>
  </view>
</template>
<script>
  import wepy from 'wepy'
  import Tips from '../utils/Tips'

  export default class BuyGiftTip extends wepy.component {
    props = {
      playerName: String,
      playerId: String,
      number: Number
    }

    data = {
      showDialog: false,
      animationData: {},
    }
    methods = {
      toggleDialog() {
        this.showDialog = !this.showDialog
        let animation = wepy.createAnimation({
          duration: 400,
          timingFunction: 'ease'
        })
        this.animation = animation
        wx.createSelectorQuery()
            .select('.dialog__container')
            .boundingClientRect((rect) => {
              this.showDialog
                  ? animation.translateY().step()
                  : animation.translateY(rect.height).step()
              this.animationData = animation.export()
              this.$apply()
            }).exec()
      }
    }

    onShareAppMessage () {
      let voteInfo = wepy.$instance.globalData.activeVote
      const title = this.number + '号 ' + this.playerName + ' ' + voteInfo.title + '，邀请您参与投票';
      const url = '/pages/vote/player?playerId=' + this.playerId + '&scene=share';
      return Tips.share(title, url, title);
    }

    hideDialog() {
      this.showDialog = false
      this.$apply()
    }
  }
</script>
