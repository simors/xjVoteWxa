<style lang="less">
  @import "../../styles/vars.less";

  .header-view {
    width: 100%;
    height: 260rpx;
    background: @color-primary;
  }

  .balance-view {
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
    padding-top: 50rpx;
  }

  .tip-text {
    font-size: 20px;
    color: #fff;
    margin-bottom: 10px;
  }

  .value-text {
    font-size: 28px;
    color: #fff;
    font-weight: bold;
  }

  .btn-group {
    display: flex;
    align-items: center;
    height: 100rpx;
    border-top: 1px solid #f2f2f2;
  }

  .btn-style {
    display: flex;
    flex: 1;
    background: @color-primary;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  .btn-text {
    color: #fff;
    font-size: 16px;
  }

  .btn-img {
    width: 48rpx;
    height: 48rpx;
    margin-right: 5px;
  }
</style>

<template>
  <view class="container">
    <view class="header-view">
      <view class="balance-view">
        <text class="tip-text">余额</text>
        <text class="value-text">¥ {{wallet.balance}}元</text>
      </view>
    </view>

    <view class="btn-group">
      <navigator class="btn-style" style="border-right: 1px solid #f2f2f2" url="/pages/mine/recharge">
        <image class="btn-img" src="/asset/svg/recharge.svg"/>
        <text class="btn-text">充值</text>
      </navigator>
      <navigator class="btn-style" url="/pages/mine/withdraw">
        <image class="btn-img" src="/asset/svg/withdraw.svg"/>
        <text class="btn-text">提现</text>
      </navigator>
    </view>

    <view style="margin: 10px 12px;">
      <dealRecords/>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import pay from '../../cloud/pay'
  import DealRecords from '../../components/dealRecords'

  export default class Wallet extends wepy.page {
    config = {
      navigationBarTitleText: '我的钱包',
      enablePullDownRefresh: false
    }

    components = {
      dealRecords: DealRecords
    }

    data = {
      wallet: null
    }

    setBackPageData(wallet) {
      this.wallet = wallet
      this.$apply()
    }

    onReachBottom() {
      this.$invoke('dealRecords', 'moreDealRecords')
    }

    async onLoad() {
      this.wallet = await pay.fetchWallet()
      this.$apply()
    }
  }
</script>
